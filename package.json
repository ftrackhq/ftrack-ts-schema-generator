{
  "name": "@ftrack/ts-schema-generator",
  "description": "Gets the schema from a ftrack instance and generates typescript interfaces for all the entity types in the instance.",
  "module": "dist/ftrack-ts-schema-generator.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:ftrackhq/ftrack-ts-schema-generator.git"
  },
  "scripts": {
    "generate": "node dist/ftrack-ts-schema-generator.js",
    "build": "esbuild source/index.ts --outfile=dist/ftrack-ts-schema-generator.js --platform=node --format=esm --bundle --packages=external",
    "prepack": "yarn build",
    "test": "tsc && --max-warnings=0 . && prettier -c .",
    "prepublish": "yarn test"
  },
  "dependencies": {
    "@ftrack/api": "^1.4.5"
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ftrackhq/ftrack-ts-schema-generator/issues"
  },
  "homepage": "http://ftrack.com",
  "devDependencies": {
    "@types/node": "^18.15.7",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "esbuild": "^0.17.14",
    "eslint": "^8.37.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "packageManager": "yarn@3.5.0",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix --max-warnings=0 .",
      "prettier --write .",
      "tsc"
    ]
  }
}
